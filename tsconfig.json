{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      },
      { "name": "typescript-plugin-css-modules" }
    ],

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "snd-react-lib/*": [
        "../../packages/snd-react-lib/src/*"
      ],
    },

    // "baseUrl": "../../",
    // "paths": {
    //   "@/*": ["apps/snd-nextjs-app/src/*"],
    //   "snd-react-lib/*": [
    //     "packages/snd-react-lib/src/*"
    //   ],
    //   // "snd-react-lib_test/*": [
    //   //   "packages/snd-react-lib_test/src/*"
    //   // ],
    // }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    // "packages/*/src"
  ],
  "exclude": ["node_modules"],
  // "references": [
  //   { "snd-react-lib_test": "packages/snd-react-lib" }
  // ]
}
